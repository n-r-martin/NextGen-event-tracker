      <div class="modal-container">
        <div class="modal-header">
          <i class="far fa-times modal-close-btn"></i>
          <h2>Submit New Event</h2>
        </div>
        <div class="modal-body">
          {{#if logged_in}}
          <form class='pure-form pure-form-stacked new-event-form'>
            <label for='event_name'>Event Name:</label>
            <input id='event-name' name='event-name' maxlength="100"></input>
            
            <label for="event-type">Event Type:</label>
           <input id="event-type" list="type">
           <datalist id="type">
              <option value="Wildfires">
              <option value="Severe Storms">
              <option value="Volcanoes">
              <option value="Icebergs">
              <option value="Earthquakes">
              <option value="Drought">
              <option value="Dust Haze">
              <option value="Floods">
              <option value="Landslides">
              <option value="Manmade">
              <option value="Snow">
              <option value="Temp. Extremes">
              <option value="Water Color">
            </datalist>
            
            <label for='description'>Description:</label>
            <textarea id='description' name='description' rows='3' cols='48'></textarea>
            
            <label for="event-date">Event date:</label>
            <input type="date" id="event-date" name="event-date">
            
            <button type='submit' value='Submit' class='pure-button pure-button-primary new-event-submit-button'>Submit</button>
          </form>   
          {{else}}
          <p>You must have an account and be logged in to submit a new event</p>
          {{/if}}
        </div>
      </div>
      
